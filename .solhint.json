{
  "extends": "solhint:all",
  "rules": {
    "mark-callable-contracts": [
      "off"
    ],
    "reason-string": [
      "error",
      { "maxLength" : 50 }
    ],
    "function-max-lines": [
      "error", 60
    ],
    "compiler-version": [
      "error",
      "0.6.3"
    ],
    "private-vars-leading-underscore": [
      "off"
    ]
  }
}
