{
  "name": "truffle-template",
  "version": "1.0.0",
  "main": "truffle.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "deploy:development": "npx truffle deploy --network development",
    "deploy:mainnet": "npx truffle deploy --network mainnet",
    "test": "scripts/test.sh",
    "coverage": "npx truffle run coverage",
    "coverage:docker": "docker build -t cov . && docker run cov",
    "lint:solhint": "npx solhint \"./contracts/**/*.sol\"",
    "lint:ethlint": "npx solium --dir contracts/",
    "lint:eslint": "eslint .",
    "lint": "npm run lint:solhint && npm run lint:ethlint && npm run lint:eslint"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "7.6.4",
    "@babel/preset-env": "7.6.3",
    "@babel/register": "7.6.2",
    "@truffle/hdwallet-provider": "1.0.19",
    "core-js": "3.2.1",
    "dotenv": "8.2.0",
    "regenerator-runtime": "0.13.3",
    "truffle": "5.1.7",
    "truffle-plugin-verify": "0.3.6"
  },
  "devDependencies": {
    "eslint": "6.4.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.18.2",
    "ethlint": "1.2.5",
    "ganache-cli": "6.8.1",
    "solhint": "2.2.0",
    "solidity-coverage": "0.7.1"
  }
}
